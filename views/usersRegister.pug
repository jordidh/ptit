extends layout

block variables
    - var msgAlert = m_alert
    - var msgSuccess = m_success
    - var msgInfo = m_info
    - var msgWarning = m_warning

block content
  div.center
    form(action='goto', method='get')
      div.center
          img(src='/images/ptit.png',  alt="Ptit")
          p Es molt fàcil registrar-se, només cal posar un nom i una contrasenya i ja està, podràs començar a crear URLs immediatament
      div.center
          | Nom &nbsp;
          input.ghost-input(name='username', type='text', value='')
          br
          | Contrasenya &nbsp;
          input.ghost-input(name='password', type='text', value='')
          br
          | Verificació &nbsp;
          input.ghost-input(name='repassword', type='text', value='')
      div.center
          input.ghost-button(name='btn', type='submit', value='Registra\'t')
